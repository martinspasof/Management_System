@model ManagementSystem.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.DateAdded, "Date Added" , new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DateAdded, new { @Value = Model.DateAdded.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.DateAdded)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReminderDate, "Date Added" , new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ReminderDate, new { @Value = Model.ReminderDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.ReminderDate)
            </div>
        </div>      

        <div class="form-group">
            @Html.LabelFor(model => model.IssueId, "Issue", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IssueId", String.Empty)
                @Html.ValidationMessageFor(model => model.IssueId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CommentTypeId, "Comment Type", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CommentTypeId", String.Empty)
                @Html.ValidationMessageFor(model => model.CommentTypeId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
